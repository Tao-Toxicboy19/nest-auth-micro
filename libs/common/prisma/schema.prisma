generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model Keys {
  id        String   @id
  apiKey    String
  secretKey String
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    String   @unique
  Users     Users    @relation(fields: [userId], references: [id])
}

model Orders {
  id        String   @id
  symbol    String
  quantity  Int
  timeframe String
  type      String
  ema       Int?
  createdAt DateTime @default(now())
  updatedAt DateTime
  leverage  Int
  userId    String?
  Users     Users?   @relation(fields: [userId], references: [id])
}

model Users {
  username  String   @unique
  password  String
  email     String   @unique
  login     Boolean  @default(false)
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime
  Keys      Keys?
  Orders    Orders[]
}
