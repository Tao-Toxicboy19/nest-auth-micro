generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

model Keys {
  id        String   @id
  apiKey    String
  secretKey String
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    String   @unique
  Users     Users    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Orders {
  id        String    @id
  symbol    String
  quantity  Int
  timeframe String
  type      String
  ema       Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime
  daletedAt DateTime?
  leverage  Int
  userId    String?
  Users     Users?    @relation(fields: [userId], references: [id])

  @@index([userId, createdAt(sort: Desc)])
}

model Users {
  username  String   @unique
  password  String
  email     String   @unique
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime
  Keys      Keys?
  Orders    Orders[]

  @@index([id])
}